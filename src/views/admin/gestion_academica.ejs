<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;">
    <title>Plan de Estudios | Giga-Edu</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-dark shadow-sm mb-4">
    <div class="container-fluid px-4">
        <span class="navbar-brand mb-0 h1">Giga-Edu ERP</span>
        <a href="/dashboard" class="btn btn-outline-light btn-sm">‚¨Ö Volver al Men√∫ Principal</a>
    </div>
</nav>

<div class="container-fluid px-4">
    <h2 class="mb-4 text-secondary">Gesti√≥n del Plan de Estudios Institucional</h2>

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white p-0 border-bottom-0">
                    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
                        <li class="nav-item"><button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#individual" type="button">Registro Manual</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold text-success" data-bs-toggle="tab" data-bs-target="#masivo" type="button">Carga Masiva (Excel)</button></li>
                    </ul>
                </div>
                
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="individual">
                            <div class="p-3 bg-light rounded border mb-4">
                                <h6 class="text-primary fw-bold mb-3">1. Crear Nueva √Årea</h6>
                                <form action="/admin/academico/area" method="POST" class="d-flex gap-2">
                                    <input type="text" name="nombre_area" class="form-control text-uppercase" placeholder="Ej: CIENCIAS NATURALES" required>
                                    <button type="submit" class="btn btn-primary">Crear</button>
                                </form>
                            </div>

                            <div class="p-3 bg-white rounded border border-primary border-opacity-25">
                                <h6 class="text-primary fw-bold mb-3">2. Agregar Asignatura a un √Årea</h6>
                                <form action="/admin/academico/asignatura" method="POST">
                                    <select name="id_area" class="form-select mb-3" required>
                                        <option value="">Seleccione un √°rea...</option>
                                        <% areas.forEach(a => { %> <option value="<%= a.id %>"><%= a.nombre %></option> <% }) %>
                                    </select>
                                    <input type="text" name="nombre_asignatura" class="form-control text-uppercase mb-3" placeholder="Nombre de la asignatura" required>
                                    <input type="number" name="peso_porcentual" class="form-control mb-4" placeholder="Peso Porcentual (%)" min="1" max="100" value="100" required>
                                    <button type="submit" class="btn btn-outline-primary w-100 fw-bold">Guardar Asignatura</button>
                                </form>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="masivo">
                            <div class="text-center mb-4 mt-3">
                                <a href="/admin/academico/plantilla" class="btn btn-outline-success"><span class="fs-5">üìä</span> Descargar Plantilla Excel</a>
                            </div>
                            <form action="/admin/academico/masivo" method="POST" enctype="multipart/form-data" id="formMasivo">
                                <input type="file" name="archivo_excel" class="form-control form-control-lg mb-4" accept=".xlsx" required>
                                <button type="submit" class="btn btn-success btn-lg w-100" onclick="mostrarCarga()">Subir Plan de Estudios</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <span>Estructura Curricular Configurada</span>
                    <span class="badge bg-primary rounded-pill"><%= areas.length %> √Åreas</span>
                </div>
                <div class="card-body" style="max-height: 700px; overflow-y: auto;">
                    
                    <% if(areas.length === 0) { %>
                        <div class="text-center text-muted py-5"><h4>üìö A√∫n no hay √°reas registradas</h4></div>
                    <% } else { %>
                        <div class="accordion" id="accordionAreas">
                            <% areas.forEach((area, index) => { %>
                                <div class="accordion-item mb-2 border rounded shadow-sm">
                                    <h2 class="accordion-header d-flex" id="heading<%= index %>">
                                        <button class="accordion-button <%= index !== 0 ? 'collapsed' : '' %> fw-bold text-dark d-flex align-items-center" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>">
                                            <div class="flex-grow-1">üìÅ √ÅREA: <%= area.nombre %></div>
                                            <span class="badge bg-secondary ms-auto"><%= area.asignaturas.length %> Asig.</span>
                                        </button>
                                        <div class="p-2 d-flex gap-1 align-items-center bg-light border-start">
                                            <button class="btn btn-sm btn-outline-primary border-0" onclick="editarArea('<%= area.id %>', '<%= area.nombre %>')" title="Editar √Årea">‚úèÔ∏è</button>
                                            <button class="btn btn-sm btn-outline-danger border-0" onclick="eliminarArea('<%= area.id %>', '<%= area.nombre %>')" title="Borrar √Årea">üóëÔ∏è</button>
                                        </div>
                                    </h2>

                                    <div id="collapse<%= index %>" class="accordion-collapse collapse <%= index === 0 ? 'show' : '' %>" data-bs-parent="#accordionAreas">
                                        <div class="accordion-body p-0">
                                            <ul class="list-group list-group-flush">
                                                <% if(area.asignaturas.length === 0) { %>
                                                    <li class="list-group-item text-muted text-center py-3">No hay asignaturas en esta √°rea.</li>
                                                <% } else { %>
                                                    <% area.asignaturas.forEach(asig => { %>
                                                        <li class="list-group-item d-flex justify-content-between align-items-center bg-light">
                                                            <span>üìÑ <%= asig.nombre %></span>
                                                            <div class="d-flex align-items-center">
                                                                <span class="badge bg-info text-dark rounded-pill me-3">Peso: <%= asig.peso_porcentual %>%</span>
                                                                <button class="btn btn-sm btn-outline-primary py-0 px-1 border-0 me-1" onclick="editarAsignatura('<%= asig.id %>', '<%= asig.nombre %>', '<%= asig.peso_porcentual %>')">‚úèÔ∏è</button>
                                                                <button class="btn btn-sm btn-outline-danger py-0 px-1 border-0" onclick="eliminarAsignatura('<%= asig.id %>', '<%= asig.nombre %>')">üóëÔ∏è</button>
                                                            </div>
                                                        </li>
                                                    <% }) %>
                                                <% } %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/academico.js"></script>

</body>
</html>