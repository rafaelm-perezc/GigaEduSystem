<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;">
    <title>Matr√≠culas y Admisiones | Giga-Edu</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script> </head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-dark shadow-sm mb-4">
    <div class="container-fluid px-4">
        <span class="navbar-brand mb-0 h1">Giga-Edu ERP</span>
        <a href="/dashboard" class="btn btn-outline-light btn-sm">‚¨Ö Volver al Men√∫ Principal</a>
    </div>
</nav>

<div class="container-fluid px-4">
    <h2 class="mb-4 text-secondary">Gesti√≥n de Matr√≠culas y Alumnos</h2>

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white p-0 border-bottom-0">
                    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active fw-bold" id="individual-tab" data-bs-toggle="tab" data-bs-target="#individual" type="button" role="tab">Registro Individual / Edici√≥n</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link fw-bold text-success" id="masivo-tab" data-bs-toggle="tab" data-bs-target="#masivo" type="button" role="tab">Carga Masiva (Excel)</button>
                        </li>
                    </ul>
                </div>
                
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        
                        <div class="tab-pane fade show active" id="individual" role="tabpanel">
                            <form action="/admin/matriculas" method="POST" id="formIndividual">
                                <input type="hidden" name="id_estudiante" id="id_estudiante">
                                
                                <h6 class="text-primary border-bottom pb-2 mb-3">Datos Personales</h6>
                                <div class="row mb-2">
                                    <div class="col-4">
                                        <select name="tipo_documento" id="tipo_documento" class="form-select form-select-sm" required>
                                            <option value="TI">TI</option>
                                            <option value="CC">CC</option>
                                            <option value="RC">RC</option>
                                            <option value="CE">CE</option>
                                        </select>
                                    </div>
                                    <div class="col-8">
                                        <input type="text" name="documento" id="documento" class="form-control form-control-sm" placeholder="No. Documento" required>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6"><input type="text" name="nombres" id="nombres" class="form-control form-control-sm" placeholder="Nombres" required></div>
                                    <div class="col-6"><input type="text" name="apellidos" id="apellidos" class="form-control form-control-sm" placeholder="Apellidos" required></div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label small text-muted mb-0">Fecha de Nacimiento</label>
                                    <input type="date" name="fecha_nacimiento" id="fecha_nacimiento" class="form-control form-control-sm">
                                </div>

                                <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">Datos de Contacto y Acudiente</h6>
                                <div class="row mb-2">
                                    <div class="col-12"><input type="text" name="direccion" id="direccion" class="form-control form-control-sm" placeholder="Direcci√≥n de Residencia"></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6"><input type="text" name="telefono" id="telefono" class="form-control form-control-sm" placeholder="Tel√©fono Estudiante"></div>
                                    <div class="col-6"><input type="email" name="email" id="email" class="form-control form-control-sm" placeholder="Correo Electr√≥nico"></div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-6"><input type="text" name="acudiente_nombre" id="acudiente_nombre" class="form-control form-control-sm" placeholder="Nombre del Acudiente"></div>
                                    <div class="col-6"><input type="text" name="acudiente_telefono" id="acudiente_telefono" class="form-control form-control-sm bg-warning bg-opacity-10 border-warning" placeholder="Tel. Emergencia (Acudiente)"></div>
                                </div>

                                <div class="mb-3 p-3 bg-light rounded border">
                                    <label class="form-label fw-bold">Asignar / Cambiar de Grupo:</label>
                                    <select name="id_grupo" id="id_grupo" class="form-select">
                                        <option value="">(Dejar en blanco si solo actualiza datos)</option>
                                        <% grupos.forEach(g => { %> 
                                            <option value="<%= g.id %>"><%= g.grado %> - <%= g.nomenclatura %> (<%= g.jornada %>)</option> 
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-secondary w-25" onclick="limpiarFormulario()">Limpiar</button>
                                    <button type="submit" class="btn btn-primary w-75" id="btnGuardar">Matricular / Actualizar</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="masivo" role="tabpanel">
                            <div class="text-center mb-4 mt-3">
                                <h5>Paso 1: Descargar Plantilla</h5>
                                <p class="small text-muted">La plantilla ahora incluye columnas para escribir el Grado (Ej: CLEI 3 (6¬∫ y 7¬∫)) y el Grupo (Ej: 301) directamente.</p>
                                <a href="/admin/matriculas/plantilla" class="btn btn-outline-success"><span class="fs-5">üìä</span> Descargar Plantilla Excel</a>
                            </div>
                            <hr>
                            <div class="mt-4">
                                <h5>Paso 2: Subir Archivo Terminado</h5>
                                <form action="/admin/matriculas/masivo" method="POST" enctype="multipart/form-data" id="formMasivo">
                                    <div class="mb-4 mt-3">
                                        <input type="file" name="archivo_excel" class="form-control form-control-lg" accept=".xlsx" required>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg w-100" onclick="mostrarCarga()">Subir y Procesar Estudiantes</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <span>Directorio de Estudiantes</span>
                    <span class="badge bg-primary rounded-pill"><%= matriculados.length %> Registros visualizados</span>
                </div>
                
                <div class="p-2 bg-light border-bottom">
                    <form action="/admin/matriculas" method="GET" class="d-flex">
                        <input type="text" name="q" class="form-control form-control-sm me-2 border-secondary" placeholder="üîç Buscar por documento, nombres o apellidos..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                        <button type="submit" class="btn btn-sm btn-dark px-3">Buscar</button>
                        <% if(typeof searchQuery !== 'undefined' && searchQuery !== '') { %>
                            <a href="/admin/matriculas" class="btn btn-sm btn-outline-danger ms-1" title="Limpiar b√∫squeda">‚úñ</a>
                        <% } %>
                    </form>
                </div>

                <div class="card-body p-0" style="max-height: 650px; overflow-y: auto;">
                    <table class="table table-hover mb-0" style="font-size: 0.9rem;">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>Documento</th>
                                <th>Estudiante</th>
                                <th>Grupo</th>
                                <th class="text-center">Acci√≥n</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(matriculados.length === 0) { %>
                                <tr><td colspan="4" class="text-center text-muted py-4">No se encontraron estudiantes con esos datos.</td></tr>
                            <% } else { %>
                                <% matriculados.forEach(est => { %>
                                    <tr>
                                        <td class="align-middle"><span class="badge bg-secondary"><%= est.documento %></span></td>
                                        <td class="align-middle fw-bold"><%= est.apellidos %> <%= est.nombres %></td>
                                        <td class="align-middle text-primary"><%= est.grado %> - <%= est.nomenclatura %></td>
                                        <td class="align-middle text-center">
                                            <button class="btn btn-sm btn-outline-primary" onclick="editarEstudiante(this)" 
                                                data-id="<%= est.id_estudiante %>" data-tipo="<%= est.tipo_documento %>" 
                                                data-doc="<%= est.documento %>" data-nom="<%= est.nombres %>" 
                                                data-ape="<%= est.apellidos %>" data-nac="<%= est.fecha_nacimiento %>"
                                                data-dir="<%= est.direccion %>" data-tel="<%= est.telefono %>" 
                                                data-email="<%= est.email %>" data-acunom="<%= est.acudiente_nombre %>" 
                                                data-acutel="<%= est.acudiente_telefono %>" data-grupo="<%= est.id_grupo %>">
                                                ‚úèÔ∏è Editar
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Manejo de Alertas del Servidor
    const params = new URLSearchParams(window.location.search);
    if (params.get('msg') === 'ok') Swal.fire({ title: '¬°√âxito!', text: 'El registro se guard√≥/actualiz√≥ correctamente.', icon: 'success', timer: 2000, showConfirmButton: false });
    if (params.get('msg') === 'masivo_ok') Swal.fire({ title: '¬°Carga Exitosa!', text: 'La lista de estudiantes fue procesada.', icon: 'success' });
    if (params.get('msg') === 'duplicado') Swal.fire('Error', 'El documento ingresado ya le pertenece a otro estudiante.', 'warning');
    if (params.get('msg') === 'error') Swal.fire('Error', 'Hubo un problema procesando la solicitud.', 'error');

    function mostrarCarga() {
        if(document.getElementById('formMasivo').checkValidity()) {
            Swal.fire({ title: 'Procesando Excel...', html: 'Verificando datos y matriculando estudiantes. Por favor espere.', allowOutsideClick: false, didOpen: () => { Swal.showLoading() } });
        }
    }

    function editarEstudiante(btn) {
        // Cargar los datos en el formulario de la Pesta√±a 1
        document.getElementById('id_estudiante').value = btn.getAttribute('data-id');
        document.getElementById('tipo_documento').value = btn.getAttribute('data-tipo');
        document.getElementById('documento').value = btn.getAttribute('data-doc');
        document.getElementById('nombres').value = btn.getAttribute('data-nom');
        document.getElementById('apellidos').value = btn.getAttribute('data-ape');
        document.getElementById('fecha_nacimiento').value = btn.getAttribute('data-nac') !== 'null' ? btn.getAttribute('data-nac') : '';
        document.getElementById('direccion').value = btn.getAttribute('data-dir') !== 'null' ? btn.getAttribute('data-dir') : '';
        document.getElementById('telefono').value = btn.getAttribute('data-tel') !== 'null' ? btn.getAttribute('data-tel') : '';
        document.getElementById('email').value = btn.getAttribute('data-email') !== 'null' ? btn.getAttribute('data-email') : '';
        document.getElementById('acudiente_nombre').value = btn.getAttribute('data-acunom') !== 'null' ? btn.getAttribute('data-acunom') : '';
        document.getElementById('acudiente_telefono').value = btn.getAttribute('data-acutel') !== 'null' ? btn.getAttribute('data-acutel') : '';
        document.getElementById('id_grupo').value = btn.getAttribute('data-grupo');
        
        // Cambiar el estilo del bot√≥n
        document.getElementById('btnGuardar').textContent = 'Guardar Cambios';
        document.getElementById('btnGuardar').classList.replace('btn-primary', 'btn-warning');

        // Moverse autom√°ticamente a la pesta√±a de "Registro Individual"
        var triggerEl = document.querySelector('#individual-tab');
        var tab = new bootstrap.Tab(triggerEl);
        tab.show();
    }

    function limpiarFormulario() {
        document.getElementById('formIndividual').reset();
        document.getElementById('id_estudiante').value = '';
        document.getElementById('btnGuardar').textContent = 'Matricular / Actualizar';
        document.getElementById('btnGuardar').classList.replace('btn-warning', 'btn-primary');
    }
</script>

</body>
</html>