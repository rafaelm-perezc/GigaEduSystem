<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:;">
    <title>Personal | Giga-Edu</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-dark shadow-sm mb-4">
    <div class="container-fluid px-4"><span class="navbar-brand mb-0 h1">Giga-Edu ERP</span><a href="/dashboard" class="btn btn-outline-light btn-sm">â¬… Volver al MenÃº Principal</a></div>
</nav>

<div class="container-fluid px-4">
    <h2 class="mb-4 text-secondary">Panel de Personal y Carga</h2>
    <div class="row">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white p-0 border-bottom-0">
                    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
                        <li class="nav-item"><button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#docentes" type="button">Docentes</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold text-success" data-bs-toggle="tab" data-bs-target="#masivo" type="button">Excel</button></li>
                        <li class="nav-item"><button class="nav-link fw-bold text-primary" data-bs-toggle="tab" data-bs-target="#grupos" type="button">Grupos</button></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="myTabContent">
                        
                        <div class="tab-pane fade show active" id="docentes">
                            <form action="/admin/asignacion/docente" method="POST">
                                <input type="text" name="documento" class="form-control mb-2" placeholder="Documento (SerÃ¡ su clave)" required>
                                <div class="row mb-2">
                                    <div class="col-6"><input type="text" name="primer_nombre" class="form-control form-control-sm text-uppercase" placeholder="1er Nombre" required></div>
                                    <div class="col-6"><input type="text" name="segundo_nombre" class="form-control form-control-sm text-uppercase" placeholder="2do Nombre"></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-6"><input type="text" name="primer_apellido" class="form-control form-control-sm text-uppercase" placeholder="1er Apellido" required></div>
                                    <div class="col-6"><input type="text" name="segundo_apellido" class="form-control form-control-sm text-uppercase" placeholder="2do Apellido"></div>
                                </div>
                                <input type="email" name="email" class="form-control form-control-sm mb-3" placeholder="Correo electrÃ³nico">
                                
                                <h6 class="text-danger border-bottom pb-1 small">En caso de emergencia:</h6>
                                <input type="text" name="contacto_emergencia_nombre" class="form-control form-control-sm text-uppercase mb-2" placeholder="Nombre Contacto">
                                <input type="text" name="contacto_emergencia_telefono" class="form-control form-control-sm mb-3" placeholder="TelÃ©fono Contacto">
                                
                                <button type="submit" class="btn btn-dark w-100">Guardar Docente</button>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="masivo">
                            <div class="text-center mb-3 mt-2"><a href="/admin/asignacion/docentes/plantilla" class="btn btn-outline-success">ðŸ“Š Descargar Plantilla</a></div>
                            <form action="/admin/asignacion/docentes/masivo" method="POST" enctype="multipart/form-data" id="formMasivo">
                                <input type="file" name="archivo_excel" class="form-control mb-3" accept=".xlsx" required>
                                <button type="submit" class="btn btn-success w-100" onclick="mostrarCarga()">Subir Lista</button>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="grupos">
                            <form action="/admin/asignacion/grupo" method="POST">
                                <select name="nombre_grado" class="form-select mb-2" required>
                                    <option value="">Seleccione Grado...</option>
                                    <% grados.forEach(g => { %> <option value="<%= g.nombre %>"><%= g.nombre %></option> <% }) %>
                                </select>
                                <div class="row mb-2">
                                    <div class="col-6"><input type="text" name="nomenclatura" class="form-control text-uppercase" placeholder="Grupo (Ej: A, 301)" required></div>
                                    <div class="col-6">
                                        <select name="jornada" class="form-select" required>
                                            <% jornadasLegales.forEach(j => { %> <option value="<%= j %>"><%= j %></option> <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Crear Grupo</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm border-0 border-top border-success border-4">
                <div class="card-header bg-white"><h6 class="mb-0 fw-bold text-success">Asignar Carga AcadÃ©mica</h6></div>
                <div class="card-body">
                    <form action="/admin/asignacion/carga" method="POST">
                        <select name="id_docente" class="form-select mb-2" required>
                            <option value="">1. Seleccione Docente...</option>
                            <% docentes.forEach(d => { %> <option value="<%= d.id %>"><%= d.primer_nombre %> <%= d.primer_apellido %></option> <% }) %>
                        </select>
                        <select name="id_asignatura" class="form-select mb-2" required>
                            <option value="">2. Seleccione Asignatura...</option>
                            <% asignaturas.forEach(a => { %> <option value="<%= a.id %>"><%= a.nombre %></option> <% }) %>
                        </select>
                        <select name="id_grupo" class="form-select mb-3" required>
                            <option value="">3. Seleccione Grupo/SalÃ³n...</option>
                            <% grupos.forEach(g => { %> <option value="<%= g.id %>"><%= g.grado %> - <%= g.nomenclatura %></option> <% }) %>
                        </select>
                        <button type="submit" class="btn btn-success w-100">Asignar Clase</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <span>Directorio de Personal Docente</span><span class="badge bg-primary rounded-pill"><%= docentes.length %> Registros</span>
                </div>
                <div class="p-2 bg-light border-bottom">
                    <input type="text" id="busquedaDocente" class="form-control border-secondary" placeholder="ðŸ” Buscar docente en vivo..." autocomplete="off">
                </div>
                <div class="card-body p-0" style="max-height: 650px; overflow-y: auto;">
                    <table class="table table-hover mb-0" style="font-size: 0.9rem;">
                        <thead class="table-light sticky-top"><tr><th>Documento</th><th>Docente</th><th>Correo</th></tr></thead>
                        <tbody id="tabla-docentes">
                            <% if(docentes.length === 0) { %>
                                <tr><td colspan="3" class="text-center text-muted py-4">No hay docentes.</td></tr>
                            <% } else { %>
                                <% docentes.forEach(d => { %>
                                    <tr>
                                        <td class="align-middle"><span class="badge bg-secondary"><%= d.documento %></span></td>
                                        <td class="align-middle fw-bold"><%= d.primer_apellido %> <%= d.segundo_apellido %> <%= d.primer_nombre %> <%= d.segundo_nombre %></td>
                                        <td class="align-middle text-muted"><%= d.email || 'N/A' %></td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/asignacion.js"></script>

</body>
</html>